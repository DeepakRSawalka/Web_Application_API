[Unit]
Description=Webapp
After=network.target 

[Service]
Type=simple
User=ec2-user
Group=ec2-group
ExecStart=/home/ec2-user/webapp/venv/bin/python /home/ec2-user/webapp/app.py
WorkingDirectory=/home/ec2-user/webapp
EnvironmentFile=/home/ec2-user/webapp/.env
Restart=always
RestartSec=3

[Install]
WantedBy=cloud-init.target